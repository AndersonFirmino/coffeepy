# Variables in CoffeePy
# Variables are declared and assigned with =

# Numbers
age = 25
price = 19.99
negative = -10

# Strings
name = "Alice"
greeting = 'Hello'

# Booleans (multiple ways)
isTrue = true
isFalse = false
isYes = yes
isNo = no
isOn = on
isOff = off

# Null values
empty = null
nothing = undefined

# Print all
print "Name: #{name}"
print "Age: #{age}"
print "Price: #{price}"
print "Is active: #{isOn}"
print "Empty value: #{empty}"
